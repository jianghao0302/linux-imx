        "arch/arm/configs/i[n-z]*":true,
        "arch/arm/configs/imxrt*":true,
    },

    // 可选：为内核相关编辑体验提供文件类型关联（方便语法/高亮）
    "files.associations": {
        "*.mod.c": "c",
        "*.dts": "dts",
        "Kconfig": "properties",
        "Kconfig.*": "properties",
        
    },

    "C_Cpp.default.dotConfig": "${workspaceFolder}/.config",
    "C_Cpp.default.intelliSenseMode": "gcc-arm",
    "C_Cpp.default.mergeConfigurations": true
